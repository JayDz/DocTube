<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/tools"
    android1:orientation="vertical"
    android1:layout_width="match_parent"
    android1:layout_height="wrap_content"
    android1:background="@color/listview_background">

    <android.support.v7.widget.CardView
        android1:layout_marginTop="6dp"
        android1:layout_marginLeft="6dp"
        android1:layout_marginRight="6dp"
        cardview:cardCornerRadius="4dp"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content">

        <RelativeLayout
            android1:layout_marginLeft="@dimen/activity_horizontal_margin"
            android1:layout_marginRight="@dimen/activity_horizontal_margin"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content">

            <ImageView
                android1:id="@+id/thumbnail"
                android1:layout_marginTop="16dp"
                android1:layout_marginRight="16dp"
                android1:layout_marginBottom="16dp"
                android1:contentDescription="@string/content_description"
                android1:layout_width="96dp"
                android1:layout_height="72dp"/>

            <TextView
                android1:id="@+id/doc_title"
                android1:layout_alignBaseline="@id/thumbnail"
                android1:layout_toRightOf="@id/thumbnail"
                style="@style/TextAppearance.AppCompat.Body1"
                android1:layout_centerInParent="true"
                android1:maxLines="2"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>